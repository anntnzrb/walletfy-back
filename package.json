{
  "name": "walletfy-back",
  "version": "1.0.0",
  "description": "Backend API for managing Evento entities - RESTful CRUD operations with Express, TypeScript and Zod validation",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "npx tsx watch src/index.ts",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "jest --runInBand"
  },
  "keywords": [
    "express",
    "typescript",
    "zod",
    "rest-api",
    "eventos"
  ],
  "author": "anntnzrb",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "mongoose": "^8.18.1",
    "tsx": "^4.20.5",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^30.1.3",
    "prettier": "^3.1.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.2",
    "typescript": "^5.3.3"
  }
}
